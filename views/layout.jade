doctype html
html
  head
    title #{title} - Example Keycloak-js-Bower
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://rawgit.com/patternfly/patternfly/master/dist/css/patternfly.min.css')
  body
  nav.navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Example Keycloak-js-Bower
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li(class=(title === 'Home' ? 'active' : ''))
            a(href='/') Home
          li(class=(title === 'Items' ? 'active' : ''))
            a(href='/items') Items
          li(class=(title === 'Form' ? 'active' : ''))
            a(href='/form') Form

  block content

  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
  script(src='https://rawgit.com/patternfly/patternfly/master/dist/js/patternfly.min.js')
  script(src='/bower_components/keycloak/dist/keycloak.min.js')

  script.
    function setupKeycloak() {
      var keycloak = Keycloak();
    }

    setupKeycloak();
